<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
        "http://www.apple.com/DTDs/PropertyList-1.0.dtd">

<!-- Created 190110 -->

<plist version="1.0">
<dict>
	<key>Label</key>
	<string>cn.junkman.agent.kextlogd</string>

	<key>ProgramArguments</key>
	<array>
		<string>/usr/local/bin/kextlogd</string>
        <string>--output</string>
        <string>__OUTPUT_FILE__</string>
        <string>--max-size</string>
        <string>__MAX_SIZE__</string>
        <string>--rolling-count</string>
        <string>__ROLL_COUNT__</string>
        <string>__KEXT_NAME__</string>
	</array>

	<key>RunAtLoad</key>
	<true/>

	<key>KeepAlive</key>
	<true/>
</dict>
</plist>

